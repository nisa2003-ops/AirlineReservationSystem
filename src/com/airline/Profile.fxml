<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="455.0" prefWidth="538.0" style="-fx-background-color: #ECF0F1;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.airline.ProfileController">
   <children>
      <VBox alignment="CENTER" prefHeight="562.0" prefWidth="538.0" spacing="25" style="-fx-background-color: #34495E; -fx-padding: 20px; -fx-background-radius: 15px;">
         <!-- Header -->
         <Label style="-fx-text-fill: white; -fx-font-size: 30px; -fx-font-weight: bold; -fx-alignment: center;" text="User Profile" />

         <!-- Display User Information -->
         <Label style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;" text="Username:" />
         <TextField fx:id="usernameField" editable="false" prefWidth="250" style="-fx-background-color: #BDC3C7; -fx-background-radius: 10px;" />

         <Label style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;" text="Role:" />
         <TextField fx:id="roleField" editable="false" prefWidth="250" style="-fx-background-color: #BDC3C7; -fx-background-radius: 10px;" />

         <!-- Update Password Section -->
         <Label style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;" text="New Password:" />
         <PasswordField fx:id="passwordField" prefWidth="250" style="-fx-background-color: #BDC3C7; -fx-background-radius: 10px;" />

         <!-- Update Button -->
         <Button fx:id="updateButton" onAction="#handleUpdateProfile" prefWidth="250" style="-fx-background-color: #1ABC9C; -fx-text-fill: white; -fx-font-size: 18px; -fx-background-radius: 15px;" text="Update Profile" />

         <!-- Error Message -->
         <Label fx:id="errorLabel" style="-fx-text-fill: red; -fx-font-size: 14px;" />

         <!-- Logout Button -->
         <Button onAction="#handleLogout" prefWidth="250" style="-fx-background-color: #E74C3C; -fx-text-fill: white; -fx-font-size: 18px; -fx-background-radius: 15px;" text="Logout" />
      </VBox>
   </children>
</AnchorPane>
