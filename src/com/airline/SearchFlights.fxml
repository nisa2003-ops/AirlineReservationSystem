<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="576.0" prefWidth="482.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="com.airline.SearchFlightsController">
    <top>
        <VBox prefHeight="162.0" prefWidth="456.0" spacing="10" style="-fx-background-color: blue;">
            <padding><Insets bottom="15" left="15" right="15" top="15" /></padding>
            
            <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Search Flights">
            <font>
               <Font name="Bodoni MT Black" size="12.0" />
            </font></Label>
            <HBox spacing="10">
                <TextField fx:id="originField" promptText="Origin Airport Code" />
                <TextField fx:id="destinationField" promptText="Destination Airport Code" />
                <DatePicker fx:id="departureDatePicker" promptText="Departure Date" />
                <Button onAction="#handleSearch" text="Search" />
            </HBox>
        </VBox>
    </top>

    <center>
        <TableView fx:id="flightsTable" prefHeight="438.0" prefWidth="230.0" style="-fx-background-color: cyan;">
            <columns>
                <TableColumn fx:id="flightIdCol" text="Flight ID" />
                <TableColumn fx:id="airplaneIdCol" text="Airplane ID" />
                <TableColumn fx:id="originCol" text="Origin" />
                <TableColumn fx:id="destinationCol" text="Destination" />
                <TableColumn fx:id="departureCol" text="Departure" />
                <TableColumn fx:id="arrivalCol" text="Arrival" />
            </columns>
        </TableView>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" style="-fx-background-color: cyan;">
            <padding><Insets bottom="10" left="10" right="10" top="10" /></padding>
            <Button onAction="#handleBookFlight" text="Book Selected Flight" />
        </HBox>
    </bottom>
</BorderPane>
